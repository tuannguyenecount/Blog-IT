@using Blog_IT.Models;
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Post>
@{
    ViewBag.Title = "Bài viết theo chủ đề " + ViewBag.SubCategoryName;
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}

<!-- Main Column -->
<div class="col-md-8">
    <h4>
        @ViewBag.Title
    </h4>
    <hr />
    @if (Model.Count > 0)
    {
        foreach (var post in Model)
        {
    <!-- Blog Post -->
            <div class="blog-post padding-bottom-20">
                <!-- Blog Item Header -->
                <div class="blog-item-header">
                    <!-- Title -->
                    <h1>
                        <a href="@Url.Action("Detail", "Post", new {  alias = post.Alias})">
                            @post.Title
                        </a>
                    </h1>
                    <div class="clearfix"></div>
                    <!-- End Title -->
                </div>
                <!-- End Blog Item Header -->
                <!-- Blog Item Details -->
                <div class="blog-post-details">
                    <!-- Author Name -->
                    <div title="Tác giả" class="blog-post-details-item blog-post-details-item-left">
                        <i class="fa fa-user color-gray-light"></i>
                        <a href="#">@(post.AspNetUser != null ? post.AspNetUser.FullName : "")</a>
                    </div>
                    <!-- End Author Name -->
                    <!-- Date -->
                    <div title="Ngày đăng" class="blog-post-details-item blog-post-details-item-left">
                        <i class="fa fa-calendar color-gray-light"></i>
                        <a href="#">@Html.DisplayFor(p => post.DatePost)</a>
                    </div>
                    <!-- Views -->
                    <div title="Lượt xem" class="blog-post-details-item blog-post-details-item-left">
                        <i class="fa fa-eye color-gray-light"></i>
                        <a href="#">@post.Views</a>
                    </div>
                    <!-- End Views-->
                    <!-- End Date -->
                    @if (post.Tags.Count > 0)
                    {
            <!-- Tags -->
                        <div title="Tags của bài" class="blog-post-details-item blog-post-details-item-left blog-post-details-tags">
                            <i class="fa fa-tag color-gray-light"></i>

                            @for (int i = 0; i < post.Tags.Count - 1; i++)
                        {
                                <a href="#">@post.Tags.ElementAt(i).Name</a><span>, </span>
                            }
                            <a href="#">@post.Tags.Last().Name</a>


                        </div>
                    }
                    <!-- End Tags -->
                   
                </div>
                <!-- End Blog Item Details -->
                <!-- Blog Item Body -->
                <div class="blog">
                    <div class="clearfix"></div>
                    <div class="blog-post-body row margin-top-15">
                        <div class="col-md-5">
                            <img class="margin-bottom-20" src="~/Photos/Posts/@post.Image"  alt="thumb1">
                        </div>
                        <div class="col-md-7">
                            <p>
                                @post.Introduce
                            </p>
                            <!-- Read More -->
                            <a href="@Url.Action("Detail", "Post", new {  alias = post.Alias})" class="btn btn-primary">
                                Đọc thêm
                                <i class="icon-chevron-right readmore-icon"></i>
                            </a>
                            <!-- End Read More -->
                        </div>
                    </div>
                </div>
                <!-- End Blog Item Body -->
            </div>
    <!-- End Blog Item -->
        }
    }
    else
    {
        <p>
            Chủ đề này chưa có bài viết nào.
        </p>
    }
    <!-- Pagination -->
    @Html.PagedListPager(Model, Page => Url.Action("PostBySubCategory", "Post", new { alias = Url.RequestContext.RouteData.Values["alias"], page = Page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded, DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded, UlElementClasses = new string[] { "pagination" } })
    <!-- End Pagination -->
</div>
