@model Blog_IT.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký thành viên";
}

<div class="col-md-6 col-md-offset-3 col-sm-offset-3">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "signup-page", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="signup-header">
            <h2>Đăng ký thành viên</h2>
            <p >
                Đăng ký thành viên của blog để dễ dàng theo dõi những bài viết mình yêu thích, nhanh chóng bình luận và nhận được thông báo từ website khi có bài viết mới.
            </p>
            <p>
                Bạn đã là thành viên? Click vào
                <a href="@Url.Action("Login")">đây</a> để thực hiện đăng nhập
            </p>
            <p class="text-info">
                @ViewBag.Message
            </p>
        </div>
        <label>@Html.LabelFor(m => m.FirstName)</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control margin-bottom-20" })
        <label>@Html.LabelFor(m => m.LastName)</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control margin-bottom-20" })
        <label>
            @Html.LabelFor(m => m.Email)
        </label>
         @Html.TextBoxFor(m => m.Email, new { @class = "form-control margin-bottom-20" })
        <div class="row">
            <div class="col-sm-6">
                <label>
                    @Html.LabelFor(m => m.Password)
                </label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control margin-bottom-20" })
            </div>
            <div class="col-sm-6">
                <label>
                    @Html.LabelFor(m => m.ConfirmPassword)
                </label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control margin-bottom-20" })
            </div>
        </div>
        <label>Nhập mã xác nhận phía dưới</label>
        @Html.TextBoxFor(m => m.CaptchaText, new {@class="form-control margin-bottom-20" })
        @*<br/>*@
        <img src="/Home/ShowCaptchaImage" class="margin-bottom-20" />
        <div class="row">
            @Html.ValidationSummary("", new { @class="text-danger"})
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-12 text-center">
                <button class="btn btn-primary" type="submit">Đăng ký</button>
            </div>
        </div>
    }
</div>

