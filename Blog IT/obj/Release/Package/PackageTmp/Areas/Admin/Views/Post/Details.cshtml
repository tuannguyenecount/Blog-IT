@model Blog_IT.Models.Post

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Chi tiết bài viết " + Model.Title.ToLower();
}
@section styles{
    <style>
        #Body{
            overflow-x:auto;
        }
    </style>
}
@section scripts{
   
}

    <a href="@Url.Action("Edit", new { id = Model.PostID})" class="text-info">Sửa bài viết</a> |
    <a href="@Url.Action("Index", "Post", new { area="Admin", page = ViewBag.Page})" class="text-info"> Trở về</a> 
        <h1>Chi tiết bài viết</h1>
        <hr />
<div class="col-md-6">

    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.UserID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Introduce)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Introduce)
        </dd>
      
    </dl>
</div>
<div class="col-md-6">
    <dl>
        <dt>
            @Html.DisplayNameFor(model=>model.CategoryID)
        </dt>
        <dd>@Html.DisplayFor(model=>model.Category.Name)

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SubCategoryID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SubCategory.Name)

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Alias)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Alias)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatePost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateModified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Views)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Views)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Show)
        </dt>

        <dd>
            @(Model.Show == true ? "Đã hiển thị" : "Chờ chấp thuận")
        </dd>
        
    </dl>
</div>
<div class="col-md-12">
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd>
            <button class="btn btn-default"  data-toggle="collapse" data-target="#NoiDung">Xem nội dung</button>
        </dd>
        <dd class="collapse" id="NoiDung">
            
            @Html.Raw(Model.Body)
        </dd>        
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            <img src="~/Photos/Posts/@Model.Image" width="355" height="200" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageOpenGraph)
        </dt>

        <dd>
            <img src="~/Photos/ImageOpenGraph/@Model.ImageOpenGraph" width="600" height="315" />
        </dd>
      

    </dl>
</div>
